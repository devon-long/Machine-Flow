<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/relLayout">


    <EditText
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:id="@+id/productNumber"
        android:hint="PART NUMBER"
        android:textColor="#D3D3D3"
        android:background="#FFF"
        android:gravity="center_horizontal"
        style="30sp"
        android:shadowColor="#000000"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:id="@+id/description"
        android:hint="DESCRIPTION"
        android:background="#FFF"
        android:gravity="center_horizontal"
        android:textColor="#D3D3D3"
        android:shadowColor="#000000"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:inputType="text"
        android:layout_alignBottom="@+id/updateButton"
        android:layout_toLeftOf="@+id/updateButton"
        android:layout_toStartOf="@+id/updateButton" />


    <Button
        android:text="Update"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:textSize="22dp"
        android:id="@+id/updateButton"
        android:background="#d3d3d3"
        android:textColor="#000"
        android:textStyle="bold"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/productNumber"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:elevation="24dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:textSize="65sp"
        android:id="@+id/descriptionDisplay"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/schaeffler_logo"
        android:id="@+id/schaefflerLogo"
        android:shadowColor="#000000"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/spinner" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="175dp"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_height="85dp"
        android:background="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberDisplay"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_gravity="center"


        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />


</RelativeLayout>
